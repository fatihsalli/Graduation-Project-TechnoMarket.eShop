
@{
    ViewData["Title"] = "UserInfoPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IdentityUser

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">User Details</h5>

                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>UserName</th>
                            <th>Email</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>@Model.UserName</td>
                            <td>@Model.Email</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

