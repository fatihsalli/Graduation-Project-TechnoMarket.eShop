
@{
    ViewData["Title"] = "UserInfoPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<OrderVM> orders = ViewBag.Orders;
}
@model IdentityUser

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">User Details</h5>

                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>UserName</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.UserName</td>
                            <td>@Model.Email</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@if (orders != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Order Details</h5>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Order Id</th>
                                <th>Customer Id</th>
                                <th>Total Price ($)</th>
                                <th>Status</th>
                                <th>Full Address</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in orders)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.CustomerId</td>
                                    <td>@item.TotalPrice $</td>
                                    <td>@item.Status</td>
                                    <td>@item.FullAddress</td>
                                    <td>
                                        <table class="table table-striped">
                                            <tr>
                                                <th>Product Id</th>
                                                <th>Product Name</th>
                                                <th>Quantity</th>
                                                <th>Price</th>
                                            </tr>
                                            @foreach (var orderItem in item.OrderItems)
                                            {
                                                <tr>
                                                    <td>@orderItem.ProductId</td>
                                                    <td>@orderItem.ProductName</td>
                                                    <td>@orderItem.Quantity</td>
                                                    <td>@orderItem.Price $</td>
                                                </tr>
                                            }
                                        </table>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}




