
<ul class="navbar-nav">
    @{
        if (User.Identity.IsAuthenticated)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" href="/Home/UserInfoPage">Hello! @User.Identity.Name</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/Home/Logout">Logout</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-action="Register" asp-controller="Home">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-action="Login" asp-controller="Home">Login</a>
            </li>
        }
    }
</ul>
