
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<ProductVM>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Products</h5>

                <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary mb-3">Create Product</a>

                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Picture</th>
                                <th>Course Name</th>
                                <th>Price</th>
                                <th>Description</th>
                                <th>Category</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img style="width:72px;" src="~/photos/@item.ImageFile" class="img-thumbnail" /></td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Description</td>
                                    <td>@item.Category.Name</td>
                                    <td>
                                        <a asp-controller="Product" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success btn-sm">Update</a>
                                        <a asp-controller="Course" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        Course not found!
                    </div>
                }
            </div>
        </div>
    </div>
</div>
